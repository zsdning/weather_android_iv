<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.iframe.ui.account.OutdoorActivity">

    <include
        android:id="@+id/toptitle"
        layout="@layout/include_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/outdoor_list_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toptitle"
        android:background="@color/white"
        app:tabIndicatorColor="@color/lightblue"
        app:tabSelectedTextColor="@color/lightblue"
        app:tabTextColor="@color/gray"/>

    <com.iframe.view.CustomViewPager
        android:id="@+id/outdoor_list_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/outdoor_list_tab"/>

