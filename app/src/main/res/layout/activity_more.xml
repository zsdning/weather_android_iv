<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbluegreen"
    android:orientation="vertical">

    <include
        android:id="@+id/toptitle"
        layout="@layout/include_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/layout_accout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_double"
            android:drawableLeft="@drawable/icon_account"
            android:gravity="center_vertical"
            android:text="  生活记账"
            android:textColor="@color/transblack"
            android:textSize="@dimen/sevenSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin"
            android:scaleType="centerInside"
            android:src="@drawable/icon_graygo" />

        <TextView
            android:id="@+id/tv_isaddcity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/sevenSize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/layout_recommend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_double"
            android:drawableLeft="@drawable/icon_recommend"
            android:gravity="center_vertical"
            android:text="  意见反馈"
            android:textColor="@color/transblack"
            android:textSize="@dimen/sevenSize" />

        <ImageView
            android:id="@+id/imv_riskassessment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin"
            android:scaleType="centerInside"
            android:src="@drawable/icon_graygo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px" />

    <RelativeLayout
        android:id="@+id/layout_declare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_declare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_double"
            android:drawableLeft="@drawable/icon_declare"
            android:gravity="center_vertical"
            android:text="  免费声明"
            android:textColor="@color/transblack"
            android:textSize="@dimen/sevenSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin"
            android:scaleType="centerInside"
            android:src="@drawable/icon_graygo" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/layout_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_double"
            android:drawableLeft="@drawable/icon_about"
            android:gravity="center_vertical"
            android:text="  关于我们"
            android:textColor="@color/transblack"
            android:textSize="@dimen/sevenSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin"
            android:scaleType="centerInside"
            android:src="@drawable/icon_graygo" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />


    <RelativeLayout
        android:id="@+id/rel_telphone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_telphone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_double"
            android:drawableLeft="@drawable/icon_telphone"
            android:gravity="center_vertical"
            android:text="  联系客服"
            android:textColor="@color/transblack"
            android:textSize="@dimen/sevenSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin"
            android:gravity="center_vertical|right"
            android:text="13052098358"
            android:textColor="@color/lightblue"
            android:textSize="@dimen/sevenSize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/layout_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_double"
            android:drawableLeft="@drawable/icon_update"
            android:gravity="center_vertical"
            android:text="  检查更新"
            android:textColor="@color/transblack"
            android:textSize="@dimen/sevenSize" />


        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin"
            android:gravity="center_vertical"
            android:text="当前版本:V2.0"
            android:textColor="@color/lightblue"
            android:textSize="@dimen/sevenSize" />
    </RelativeLayout>

</LinearLayout>



