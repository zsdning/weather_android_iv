<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluegreen"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluegreen"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/lightgray"/>
        <RelativeLayout
            android:id="@+id/layout_mycard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_mycard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:gravity="center_vertical"
                android:text="我的城市"
                android:textColor="@color/transblack"
                android:textSize="@dimen/sevenSize"/>

            <ImageView
                android:id="@+id/imv_mycardgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/margin"
                android:scaleType="centerInside"
                android:src="@drawable/icon_graygo"/>

            <TextView
                android:id="@+id/tv_isaddcity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin"
                android:layout_toLeftOf="@id/imv_mycardgo"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/sevenSize"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/lightgray"/>
        <RelativeLayout
            android:id="@+id/layout_riskassessment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_riskassessment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:gravity="center_vertical"
                android:text="字体大小"
                android:textColor="@color/transblack"
                android:textSize="@dimen/sevenSize"/>

            <ImageView
                android:id="@+id/imv_riskassessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/margin"
                android:scaleType="centerInside"
                android:src="@drawable/icon_graygo"/>

            <TextView
                android:id="@+id/tv_isassessment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin"
                android:layout_toLeftOf="@id/imv_riskassessment"
                android:gravity="center_vertical"
                android:text="中"
                android:textColor="#0000ff"
                android:textSize="@dimen/sevenSize"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="@color/bluegreen"
            android:layout_marginLeft="@dimen/margin"/>

        <Button
            android:id="@+id/btn_acountsafe"
            style="@style/setting_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="非Wifi网络流量"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/lightgray"/>

        <Button
            android:id="@+id/btn_mypackage"
            style="@style/setting_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="清理缓存"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightgray"
            android:layout_marginLeft="@dimen/margin"/>

        <Button
            android:id="@+id/btn_myprize"
            style="@style/setting_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="推送通知"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="@color/bluegreen"
            android:layout_marginLeft="@dimen/margin"/>


        <RelativeLayout
            android:id="@+id/layout_checkupdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_checkupdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:gravity="center_vertical"
                android:text="版本号"
                android:textColor="@color/transblack"
                android:textSize="@dimen/sevenSize"/>

            <ImageView
                android:id="@+id/imv_graygo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/margin"
                android:scaleType="centerInside"
                android:src="@drawable/icon_graygo"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin"
                android:layout_toLeftOf="@id/imv_graygo"
                android:gravity="center_vertical"
                android:text="V2.0"
                android:textColor="@color/gray"
                android:textSize="@dimen/sevenSize"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/lightgray"/>


        <RelativeLayout
            android:id="@+id/rel_telphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:gravity="center_vertical"
                android:text="客服电话"
                android:textColor="@color/transblack"
                android:textSize="@dimen/sevenSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin"
                android:gravity="center_vertical|right"
                android:text="13052098358"
                android:textColor="#0000ff"
                android:textSize="@dimen/sevenSize" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/lightgray"/>

        <Button
            android:id="@+id/btn_help"
            style="@style/setting_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="帮助中心"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/lightgray"/>

        <Button
            android:id="@+id/btn_about"
            style="@style/setting_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:text="关于"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightgray"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btn_lightred_corner"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/eightSize"/>

    </LinearLayout>
</ScrollView>

