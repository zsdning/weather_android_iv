<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wheelview_dialog_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/drab"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ccc" />

    <com.iframe.view.wheelview.WheelView
        android:id="@+id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ccc" />

    <Button
        android:id="@+id/wheelview_dialog_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/btn_lightred_corner"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="чбошод"
        android:textColor="@color/white"
        android:textSize="@dimen/nineSize" />

</LinearLayout>