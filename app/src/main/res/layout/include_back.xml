<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/title_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:onClick="back"
            android:scaleType="centerInside"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/tab_more_selector"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btn_findcity"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/findcity"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_set"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/tab_set_selector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/share_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_myinvest"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_tab_myinvest"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/eightSize" />


        <ImageView
            android:id="@+id/right"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_tuijian"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_profit_log"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="记录"
            android:textColor="@color/white"
            android:textSize="@dimen/eightSize"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/help"
            android:visibility="gone"/>

    </RelativeLayout>



</RelativeLayout>
